<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]: Saavor</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="icon" type="image/x-icon" href="/assets/img/favicon.ico" />
    <link href="/css/dashboard.css?v=1.4" rel="stylesheet" />
    <link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/js/sources/font-awesome_5.15.1.min.js"></script>
    <link href="~/css/materialicons.css" rel="stylesheet" />
    <style>#layoutSidenav_nav img {padding: 10px;}</style>
    <link href="~/css/toastr.css" rel="stylesheet" />
     @*<link href="~/css/jquery.range.css" rel="stylesheet" />*@
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand bg-white" href="index.html"><img src="/images/logo.png" /></a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
        <div class="text-white ml-4 roboto-regular font-size-15 kitchen_name">
            @if (!string.IsNullOrEmpty(Convert.ToString(@ViewData["Title"])) && Convert.ToString(@ViewData["Title"]) != "Home" && Convert.ToString(@ViewData["Title"]) != "Manage Profile" && Convert.ToString(@ViewData["Title"]) != "Dashboard")
            {
                @ViewData["Title"]
                if (Convert.ToString(@ViewData["Title"]) != "Kitchen Request")
                {
                    @if (!string.IsNullOrEmpty(@User.Claims.FirstOrDefault(c => c.Type == "KitchenName").Value))
                    {
                        <span class="roboto-regular font-size-15"> - <span class="header--kitchen_name">@User.Claims.FirstOrDefault(c => c.Type == "KitchenName").Value</span></span>
                    }
                }
            }
            else
            {
                <span class="roboto-regular font-size-15">  @ViewData["KitchenName"]</span>
            }
            @if (!string.IsNullOrEmpty(Convert.ToString(@ViewData["AvarageRating"])))
            {
                <span class="kitchen_header--avaragerating">
                    @ViewData["AvarageRating"]

                    @{
                        var stars = Convert.ToDecimal(Convert.ToString(@ViewData["AvarageRating"]));
                        var i = Convert.ToInt32(@ViewData["GrayStar"]);
                    }

                    @for (int j = 0; j < Convert.ToInt32((stars)); j++)
                    {
                        <span class=""><i class="custom-star-color top-star fa fa-star"></i></span>
                    }
                    @if (i > 0)
                    {
                        @for (int k = 0; k < i; k++)
                        {
                            <span class=""><i class="custom-star-color-default top-star fa fa-star"></i></span>
                        }

                    }


                </span>
            }

        </div>
        <!-- Navbar Search-->
        <div class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0"></div>
        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0 ">
            <li class="badge_notification dropdown">
                <a class="notification " id="notificationDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons float-left color-black">
                        notifications
                    </span>
                    <span class="badge" id="pdOc">0</span>
                </a>
                <div id="notificationDropdownContainer" class="dropdown-menu dropdown-menu-right" aria-labelledby="notificationDropdown" style="margin-top:-3px;height:500px;overflow-x:hidden;overflow-y:auto;background:#fff;padding:0 20px 20px 20px;">
                </div>

                <div id="notificationsHtml" class="dropdown-menu dropdown-menu-right" aria-labelledby="notificationDropdown" style="margin-top:-3px;">
                    <div class="row">
                        <div class="col-12 p-2">
                            <span action="/orders/new" style="word-break: break-word;cursor: pointer;width: 100%;float: left;" class="p-orders" onclick="RedirectToOrders(this)">
                                <span class="w-100 float-left roboto-bold font-size-14 color-black">Order ID: $T.orderNumber - <span class="roboto-regular font-size-14 color-black">New Order recieved from $T.userName</span></span>
                             </span>
                        </div>
                    </div>
                    <div class="dropdown-divider"></div>
                </div>
            </li>
            <li class="nav-item dropdown user-profile-dropdonw">

                <a class="nav-link  " id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="material-icons float-left color-black">
                        person_outline
                    </span>
                    <span class="float-left color-white mt-1 ml-3">
                        @User.Claims.FirstOrDefault(c => c.Type == "UserName").Value
                    </span>
                    <span class="material-icons bg-trans color-white">
                        expand_more
                    </span>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <div class="row">
                        <div class="col-12 text-center p-2">
                            <span class="dropdown_user-name float-left w-100">@User.Claims.FirstOrDefault(c => c.Type == "UserName").Value</span>
                            <span class="dropdown_business-name float-left w-100 font-size-15">@User.Claims.FirstOrDefault(c => c.Type == "BusinessName").Value</span>
                            @if (User.Claims.FirstOrDefault(c => c.Type == "LoginType").Value == "User")
                            {
                                <span class="dropdown_business-name float-left w-100 manage-user--profile">
                                    <a asp-controller="auth" asp-action="update">Manage your Profile</a>
                                </span>
                            }

                        </div>
                    </div>
                    @*<div class="dropdown-divider"></div>
                    <div class="row ddl_setting">
                        <div class="col-12">
                            <span class="dropdown_business-name float-left w-100 font-size-15">
                                <a href="/manage/kitchen">Manage Kitchen</a>
                            </span>
                        </div>
                    </div>*@
                    <div class="dropdown-divider"></div>
                    <div class="row">
                        <div class="col-12 text-center p-2">
                            <a class="dropdown_sign-out color-theme" asp-controller="auth" asp-action="signout">Sign out</a>
                        </div>
                    </div>
                </div>
            </li>

        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <img src="/images/logo.png" />
            <nav class="sb-sidenav accordion" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (!string.IsNullOrEmpty(@User.Claims.FirstOrDefault(c => c.Type == "IsAprovedKitchenRequest").Value) && Convert.ToInt32(@User.Claims.FirstOrDefault(c => c.Type == "IsAprovedKitchenRequest").Value) > 0 && (!string.IsNullOrEmpty(@User.Claims.FirstOrDefault(c => c.Type == "EncryptedProfileId").Value) || !string.IsNullOrEmpty(Convert.ToString(ViewData["EncryptedProfileId"]))))
                        {
                            @if (@User.Claims.FirstOrDefault(c => c.Type == "LoginType").Value == "Kitchen")
                            {
                                <a class="nav-link dashboard_" href="/kitchendashboard/overview/@User.Claims.FirstOrDefault(c => c.Type == "EncryptedProfileId").Value/@User.Claims.FirstOrDefault(c => c.Type == "KitchenName").Value">Dashboard</a>
                            }
                            else
                            {
                                <a class="nav-link home_" asp-action="home" asp-controller="dashboard">Home</a>
                                <a class="nav-link dashboard_" href="/kitchendashboard/overview/@User.Claims.FirstOrDefault(c => c.Type == "EncryptedProfileId").Value/@User.Claims.FirstOrDefault(c => c.Type == "KitchenName").Value">Dashboard</a>
                            }

                            <a class="nav-link manage_users" asp-action="manageusers" asp-controller="kitchendashboard">Manage Users</a>
                            <a class="nav-link manage_orders" asp-action="neworders" asp-controller="kitchendashboard">Manage Orders</a>
                            <a class="nav-link refunds" asp-action="refunds" asp-controller="kitchendashboard">Manage Refunds</a>
                            <a class="nav-link messages" asp-action="messages" asp-controller="message">Messages</a>
                            @*<a class="nav-link manage_reports" asp-action="managereports" asp-controller="kitchendashboard">Reports</a>*@
                            <a class="list-group-item list-group-item-action collapsed text-truncate nav-link manage_reports" href="#managereport" data-toggle="collapse" data-target="#managereport">
                                <span class="d-none_ d-sm-inline">Manage Reports</span>
                                <div class="sb-sidenav-collapse-arrow float-right"><span class="material-icons">expand_more</span></div>
                            </a>
                            <div class="collapse" id="managereport" aria-expanded="false">
                                <ul class="flex-column pl-2 nav">
                                    <li class="nav-item"><a class="list-group-item list-group-item-action financialreports" asp-action="financial" asp-controller="report"><span>Financial Reports</span></a></li>
                                    <li class="nav-item"><a class="list-group-item list-group-item-action managereports" asp-action="order" asp-controller="report"><span>Order Reports</span></a></li>
                                    @*<li class="nav-item"><a class="list-group-item list-group-item-action managebalance" asp-action="balance" asp-controller="report"><span>Saavor's Fee</span></a></li>*@
                                </ul>
                            </div>
                            @*<a class="nav-link manage_reports" asp-action="managereports" asp-controller="kitchendashboard">Reports</a>*@

                            <a class="nav-link reviewfeedbacks" asp-action="reviewfeedbacks" asp-controller="kitchendashboard">Review</a>
                            <a class="nav-link left-side--signout" asp-action="signout" asp-controller="auth">Sign out</a>
                        }

                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>

        </div>
    </div>
    <div id="notificationsOverlay" class="overlay"></div>
    <input type="hidden" id="hdnSystemTime" />
    <input type="hidden" id="hdnPO" value="0" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js?v=1.2" asp-append-version="true"></script>
    <script src="~/js/toastr.min.js"></script>
    <script src="~/js/jquery.common.js?v=1.1"></script>
    <script src="~/js/application/jquery.notification.js?v=1.1"></script>
    <script src="~/js/application/jquery.receipt-print.js"></script>
    @*<script src="~/lib/jquery.range.js"></script>*@
    @RenderSection("Scripts", required: false)
    @functions {
        public int SubtractNumbers(int number1, int number2)
        {
            return number1 - number2;
        }
    }
</body>
</html>
